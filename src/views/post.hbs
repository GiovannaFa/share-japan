<div class="card">
    <div class="card-header">
        <h4><b>{{post.title}}</b></h4>
    </div>
    <div class="card-body">
        <div id="post">
            <p>
                @ <a href="/city/{{post.where}}"><i>{{post.where}}</i></a>,
                about <a href="/topic/{{post.about}}"><i>{{post.about}}</i></a>
                by <a id="link" href="/user/profile/{{ author._id }}"><i>{{author.name}}</i></a>
            </p>
            <div class="d-flex">
                <div class="col-md-6 d-flex align-items-center">
                    <div class="text-left w-100">
                        <div class="text-center">
                            <p>{{post.description}}</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-6 d-flex align-items-center">
                    {{#if post.filenames}}
                        <div id="carouselExampleIndicators" class="carousel slide w-100">
                            <ol class="carousel-indicators">
                                {{#each post.filenames}}
                                    {{#if @first}}
                                        <li data-target="#carouselExampleIndicators" data-slide-to="{{@index}}" class="active"></li>
                                    {{else}}
                                        <li data-target="#carouselExampleIndicators" data-slide-to="{{@index}}"></li>
                                    {{/if}}
                                {{/each}}
                            </ol>
                            <div class="carousel-inner">
                                {{#each post.filenames}}
                                    <div class="carousel-item {{#if @first}}active{{/if}}">
                                        {{#ifExtensionEquals this "mp4"}}
                                            <video class="d-block mx-auto" width="80%" controls>
                                                <source src="/public/upload/{{ ../post._id }}/{{this}}" type="video/mp4" />
                                            </video>
                                        {{else}}
                                            <img src="/public/upload/{{ ../post._id }}/{{this}}" class="d-block mx-auto" style="width: 80%;">
                                        {{/ifExtensionEquals}}
                                    </div>
                                {{/each}}
                            </div>
                            <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                <span class="sr-only">Previous</span>
                            </a>
                            <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                <span class="sr-only">Next</span>
                            </a>
                        </div>
                    {{else}}
                        <div class="text-center">
                            <img src="/public/img/share-japan_logo.png" width="80" height="80" class="img-fluid">
                        </div>
                    {{/if}}
                </div>
            </div>
        </div>
        <div class="d-flex justify-content-between align-items-center">
            {{#if user}}
                <button class="btn btn-success" id="btn-like" data-id="{{post._id}}">
                    <i class="fa fa-thumbs-o-up" aria-hidden="true"></i>
                </button>
            {{else}}
                <button class="btn btn-success">
                    <a href="/user/login">
                        <i class="fa fa-thumbs-o-up" aria-hidden="true"></i>
                    </a>
                </button>
            {{/if}}
            {{#if is_user}}
                <div id="likes">
                    <span class="likes-count">{{post.likes.length}}</span>
                    <i class="fa fa-heart" aria-hidden="true"></i>
                </div>
            {{else}}
                <div id="likes">
                    <span class="likes-count">{{post.likes.length}}</span>
                    <i class="fa fa-heart-o" aria-hidden="true"></i>
                </div>
            {{/if}}
            <div>
                {{post.views}}<i class="fa fa-eye" aria-hidden="true"></i>
            </div>
            <div class="black">
                <i class="fa fa-clock-o" aria-hidden="true"></i>
                {{timeago post.timestamp}}
            </div>
        </div>
    </div>
</div>
