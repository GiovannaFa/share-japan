{{#if popular}}
<div class="card mb-4">
    <div class="card-header bg-light text-black">
        <h5><i class="fa fa-paper-plane" aria-hidden="true"></i> Most Popular Reviews</h5>
    </div>
    <div class="card-body">
        {{#each popular}}
        <a href="/posts/{{_id}}" id="link">
            <div class="row mb-3">
                <p><b>{{title}} @ <a href="/city/{{where.prefecture}}/{{where.city}}"><i>{{where.city}}</i></a>, <a href="/prefecture/{{where.prefecture}}"><i>{{where.prefecture}}</i></a></b> with {{likes.length}} <i class="fa fa-thumbs-o-up" aria-hidden="true"></i>
                
                <!-- Only show "Saved by x users" if there are any saved_by -->
                {{#gt saved_by_length 0}}
                    | Saved by {{saved_by_length}} user{{#gt saved_by_length 1}}s{{/gt}}
                {{/gt}}
                
                </p>
            </div>
        </a>
        {{/each}}
    </div>
</div>
{{/if}}
