<div class="row">
    <div class="col-md-4 mx-auto">
        <div class="card text-center">
            <div class="card-header">
                <h1>Signup</h1>
            </div>
            <img src="/public/img/share-japan_logo.png" class="mx-auto d-block m-4 logo" alt="share-japan logo">
            <div class="card-body">
                <form action="/user/signup" method="POST">
                    <div class="form-group">
                        <input type="text" class="form-control" name="name" placeholder="Name" value={{name}}>
                    </div>
                    <div class="form-group">
                        <input type="email" class="form-control" name="email" placeholder="e-mail" value={{email}}>
                    </div>
                    <div class="form-group">
                        <input type="password" class="form-control" name="password" placeholder="choose a password"
                            value={{password}}>
                    </div>
                    <div class="form-group">
                        <input type="password" class="form-control" name="confirmPassword"
                            placeholder="confirm your password" value={{confirmPassword}}>
                    </div>
                    <button class="btn btn-primary btn-block">
                        SignUp!
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>